{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
